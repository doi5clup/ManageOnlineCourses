<div class="row justify-content-center mt-20">
    <div class="d-flex justify-content-center">
      <div class="card" style="width:40rem;padding:10px">
        
        {{#if error}}
            <h3 class="mb-20" style="font-size: 18px; color: red">Bạn hãy điền đầy đủ thông tin trước khi đăng ký !</h3>
        {{/if}}
        
        <ul class="list-group list-group-flush">
          <form action="/teacher/create" method="post">
            <li class="list-group-item">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-default">Tên khóa học</span>
                    </div>
                    <input name="TenKH" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Ngày bắt đầu</span>
                    </div>
                    <input name="NgayBD" type="date" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Ngày kết thúc</span>
                    </div>
                    <input name="NgayKT" type="date" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Học phí</span>
                    </div>
                    <input style="weidth: 500px; height: 35px" name="HocPhi" type="number" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Số lượng HV tối đa</span>
                    </div>
                    <input name="SLHV_Max" type="number" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Lĩnh vực</span>
                    </div>
                    <input name="LinhVuc" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Lịch học cụ thể hằng tuần</span>
                    </div>
                    <input name="LichHoc" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Mô tả</span>
                    </div>
                    <input name="MoTa" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Link hình ảnh mô tả</span>
                    </div>
                    <input name="LinkImage" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Link video nhúng</span>
                    </div>
                    <input name="LinkVideo" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" />
                </div>

                <div class="d-flex justify-content-center align-items-end text-center">
                    <button type="submit"
                        style="background-color:#44c767;
                            border-radius:28px;
                            border:1px solid #18ab29;
                            display:inline-block;
                            cursor:pointer;color:#ffffff;font-family:Arial;font-size:17px;padding-left:20px;padding-right:20px;padding-top:10px;padding-bottom:10px;text-decoration:none;;">Thêm
                    </button>
              </div>
            </li>
          </form>

        </ul>
      </div>
    </div>
  </div>