<!--====== PAGE BANNER PART START ======-->
    
    <section id="page-banner" class="pt-105 pb-110 bg_cover" data-overlay="8" style="background-image: url(/images/page-banner-2.jpg)">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 mt-60">
                    <div class="page-banner-cont">
                        <h2>Khóa học của tôi</h2>
                    </div>  <!-- page banner cont -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </section>
    
    <!--====== PAGE BANNER PART ENDS ======-->

    <!--====== COURSE PART START ======-->
    
    <section id="course-part" class="pt-115 pb-115">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="section-title pb-45">
                        <h5>Khóa học của chúng tôi</h5>
                        <br>
                        <h2>Chưa hoàn thành</h2>
                    </div> <!-- section title -->
                </div>
            </div> <!-- row -->
            {{#if len_khoahoc_opening}}
                <div class="row course-slied mt-30">
            {{else}}
                <div class="row mt-30">
            {{/if}}
                {{#each khoahoc_opening}}
                    <div class="col-lg-4">
                        <div class="singel-course-2">
                            <div class="thum">
                                <div class="image">
                                    <a href="/student/course/{{this.Slug}}">
                                        <img style="width: 369px; height: 251px;" src="{{this.LinkImage}}" alt="Course">
                                    </a>
                                </div>
                                
                                <div class="course-teacher">
                                    <div class="thum">
                                        <a href="courses-singel.html"><img style="width: 30px; height: 40px;" src="{{this.LinkAvatar}}" alt="teacher"></a>
                                    </div>

                                    <div class="name">
                                        <a href="/student/course/{{this.Slug}}"><h6>{{this.HoTen}}</h6></a>
                                    </div>
                                    
                                    <div class="review">
                                        <ul>
                                            <li><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star"></i></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="cont">
                                <a href="/student/course/{{this.Slug}}"><h4>{{this.TenKH}}</h4></a>
                            </div>
                        </div> <!-- singel course -->
                    </div>
                {{/each}}
            </div> <!-- course slied -->
        </div> <!-- container -->
    </section>
    
    <!--====== COURSE PART ENDS ======-->

